<div ng-controller="widgets.tasktracker.manager as vm">

    <div class="portlet light">
        <div class="portlet-title">
            <div class="inputs inputs-full-width">
                <div class="portlet-input">
                    <form class="ng-pristine ng-valid">
                        <div class="input-group">
                            <input ng-model="vm.filterText" auto-focus class="form-control" placeholder="@L("SearchWithThreeDot")" type="text">
                            <span class="input-group-btn">
                                <button ng-click="vm.Filter()" class="btn btn-default" type="submit"><i class="icon-magnifier"></i></button>
                            </span>
                        </div>
                    </form>
                </div>
            </div>
            <div class="caption">
                <i class="icon-note font-yellow-gold"></i>
                <span class="caption-subject bold font-yellow-gold uppercase">
                    @L("Task")
                </span>
            </div>
            <div class="tools">
                <a href="" class="collapse" data-original-title="" title="">
                </a>
                <a href="" class="reload" data-original-title="Re-load" title="" ng-click="vm.refresh()">
                </a>
                <a href="javascript:;" class="fullscreen" data-original-title="" title="">
                </a>
                <a href="" class="remove" data-original-title="" title="">
                </a>

            </div>
            <div class="actions">
                <a href="javascript:;" ng-click="vm.Create()" class="btn btn-circle btn-icon-only btn-default" title="Create">
                    <i class="fa fa-plus"></i>
                </a>
            </div>
            <div class="col-sm-12">
                <div class="page-toolbar pull-right">
                    <div class="md-checkbox-list">
                        <div class="md-checkbox">
                            <input id="filter_OpenOnly" class="md-check" type="checkbox"
                                   name="filter_OpenOnly" ng-click="vm.Filter()" ng-model="vm.openOnly">
                            <label for="filter_OpenOnly">
                                <span class="inc"></span>
                                <span class="check"></span>
                                <span class="box"></span>
                                @L("OpenOnly")
                            </label>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="portlet-body">
            <div busy-if="vm.loading">
                <div ui-grid="vm.gridOptions" style="height: 420px;" ui-grid-pagination ui-grid-resize-columns></div>
            </div>
        </div>
    </div>

</div>