
<form name="form" role="form" novalidate class="form-validation">
    <div class="modal-header">
        <p class="lead">@L("CreateProject")</p>
    </div>

    <div class="modal-body">
        <div class="row">

            <div class="col-sm-12">

                <div class="form-group form-md-line-input form-md-floating-label no-hint">
                    <input type="text" ng-model="vm.input.name" required class="form-control" />
                    <label>@L("Name")</label>
                </div>
            </div>
            <div class="col-sm-12">
                <div class="form-group form-md-line-input form-md-floating-label no-hint">
                    <label>@L("Manager")</label>
                    <ui-select multiple ng-model="vm.input.managerIds" theme="bootstrap" ng-disabled="disabled">
                        <ui-select-match>{{$item.fullName}}</ui-select-match>
                        <ui-select-choices repeat="manager.id as manager in vm.managers | filter: $select.search">
                            <div ng-bind-html="manager.fullName | highlight: $select.search"></div>
                            <small>
                                {{manager.emailAddress}}
                            </small>
                        </ui-select-choices>
                    </ui-select>
                </div>
            </div>
            <div class="col-sm-6">
                <div class="form-group form-md-line-input has-success">
                    <a class="dropdown-toggle" id="StartTime" role="button" data-toggle="dropdown" data-target="#" href="#">
                        <div class="input-group">
                            <input type="text" class="form-control" data-ng-model="vm.input.startTime" required>
                            <span class="input-group-addon"><i class="glyphicon glyphicon-calendar"></i></span>
                        </div>
                    </a>
                    <ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
                        <datetimepicker data-ng-model="vm.input.startTime"
                                        data-datetimepicker-config="{ dropdownSelector: '#StartTime', renderOn: 'end-date-changed' }"
                                        data-on-set-time="startDateOnSetTime()"
                                        data-before-render="startDateBeforeRender($dates)"></datetimepicker>
                    </ul>
                    <label>@L("StartTime")</label>
                </div>
            </div>
            <div class="col-sm-6">
                <div class="form-group form-md-line-input has-success">
                    <a class="dropdown-toggle" id="EndTime" role="button" data-toggle="dropdown" data-target="#" href="#">
                        <div class="input-group">
                            <input type="text" class="form-control" data-ng-model="vm.input.endTime" required>
                            <span class="input-group-addon"><i class="glyphicon glyphicon-calendar"></i></span>
                        </div>
                    </a>
                    <ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
                        <datetimepicker data-ng-model="vm.input.endTime"
                                        data-datetimepicker-config="{ dropdownSelector: '#EndTime', renderOn: 'start-date-changed' }"
                                        data-on-set-time="endDateOnSetTime()"
                                        data-before-render="endDateBeforeRender($view, $dates, $leftDate, $upDate, $rightDate)"></datetimepicker>
                    </ul>
                    <label>@L("EndTime")</label>
                </div>
            </div>

            <div class="col-sm-12">
                <div class="form-group form-md-line-input form-md-floating-label no-hint">
                    <textarea ng-model="vm.input.description" class="form-control" rows="5"></textarea>
                    <label>@L("Description")</label>
                </div>
            </div>
             
            <div class="col-sm-12">
                <div class="form-group form-md-line-input form-md-floating-label no-hint">
                    <label class="col-md-3">@L("AttachmentsMultiAllowed")</label>
                    <div class="col-md-9">
                        <input type="file" class="btn btn-default" ngf-select="" ng-model="uploads" name="file" multiple>
                    </div>
                </div>
            </div> 
        </div>
    </div>
 
    <div class="modal-footer">
        <button ng-disabled="vm.saving" class="btn btn-default" ng-click="vm.Cancel()">@L("Cancel")</button>
        <button button-busy="vm.saving" busy-text="@L("SavingWithThreeDot")" class="btn btn-primary blue" ng-click="vm.Save(uploads)" ng-disabled="form.$invalid"><i class="fa fa-save"></i> <span>@L("Save")</span></button>
    </div>

</form>
